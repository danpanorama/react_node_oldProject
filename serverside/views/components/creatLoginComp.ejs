<div class="createAcount section">
 


  <div class="widAuto"> 
    <h1>sing up</h1>
  <form class="needs-validation" style="color: antiquewhite;" action="/createUser/signup"  method="POST" novalidate>
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationTooltip01">First name</label>
        <input type="text" class="form-control" id="createusername"  name="client_fullName"  required  placeholder="username" >
        <div class="valid-tooltip">
          Looks good!
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <label for="validationTooltip02">Password </label>
        <input type="password" class="form-control"  name="password"
        placeholder="password" id="createuserpassword"  required>
        <div class="valid-tooltip">
          Looks good!
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationTooltip03">E-mail</label>
        <input type="text"   name="client_email"
       
        placeholder="email" class="form-control" id="validationTooltip03" required>
        <div class="invalid-tooltip">
          Please provide a valid city.
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <label for="validationTooltip04">View</label>
        <select class="custom-select"  name="client_view" id="validationTooltip04" required>
          <option selected disabled value="">Choose...</option>
          <option value="D">D</option>
          <option value="L">L</option>
        </select>
        <div class="invalid-tooltip">
          Please select a valid state.
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <label for="validationTooltip05">Phon</label>
        <input type="number" name="client_phon" placeholder="phon" class="form-control" id="createuserPhon" required>
        <div class="invalid-tooltip">
          Please provide a valid zip.
        </div>
      </div>
      <label for="remember">remember me</label>
      <input type="checkbox" name="remember" id="remember" />
    </div>
    <button class="btn btn-primary" type="submit">Submit form</button>
  </form>
  <p class="badValue">
    <%=err%>
  </p>
</div>


</div>
